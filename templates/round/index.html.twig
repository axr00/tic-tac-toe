{% extends 'base.html.twig' %}

{% block title %}
    <title>Tic Tac Toe | Game</title>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Header -->
        {% block header %}
            <header class="row fixed-top">
                <div class="d-flex bg-dark p-1 text-white align-items-center">
                    <div class="col-4 d-flex flex-fill justify-content-start">
                        <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-primary mx-4">Home</a>
                    </div>
                    <div class="col-4 d-flex flex-fill justify-content-center">
                        <span class="pagetitle">Tic Tac Toe Challange</span>
                    </div>
                    <div class="col-4 d-flex flex-fill justify-content-end">
                        <span class="pagetitle mx-5">Player: {{ currentName }}</span>
                        <a id="hidden-link-results-human" hidden href="{{ path('app_game_results_human',{ id: currentID }) }}"></a>
                        <a id="hidden-link-results-ai" hidden href="{{ path('app_game_results_ai',{ id: currentID }) }}"></a>
                        <a id="hidden-link-results-tie" hidden href="{{ path('app_game_results_tie',{ id: currentID }) }}"></a>
                    </div>
                </div>
            </header>
        {% endblock %}

        <!-- Main Content -->
        {% block content %}
            <main class="row d-flex bg-secondary text-white vh-100">
                <div class="col-xl-12 d-flex justify-content-center align-items-center bg-success">
                    <div class="d-flex canvas-col flex-column">
                        <canvas class="canvas-tile" width="100" height="100" id="a0"></canvas>
                        <canvas class="canvas-tile" width="100" height="100" id="a1"></canvas>
                        <canvas class="canvas-tile" width="100" height="100" id="a2"></canvas>
                    </div>
                    <div class="d-flex canvas-col flex-column">
                        <canvas class="canvas-tile" width="100" height="100" id="b0"></canvas>
                        <canvas class="canvas-tile" width="100" height="100" id="b1"></canvas>
                        <canvas class="canvas-tile" width="100" height="100" id="b2"></canvas>
                    </div>
                    <div class="d-flex canvas-col flex-column">
                        <canvas class="canvas-tile" width="100" height="100" id="c0"></canvas>
                        <canvas class="canvas-tile" width="100" height="100" id="c1"></canvas>
                        <canvas class="canvas-tile" width="100" height="100" id="c2"></canvas>
                    </div>
                </div>
                <div class="col-xl-12 d-flex justify-content-center align-items-center bg-success">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('warning') %}
                        <div class="alert alert-warning" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </main>
        {% endblock %}

        <!-- Footer -->
        {% block footer %}
            <footer class="row bg-dark text-white pt-2 pb-2 fixed-bottom">
                <div class="col-xl-12 d-flex justify-content-center align-items-center">
                    <span class="pagetitled">Â© 2023 axr00 - <a href="https://github.com/axr00/tic-tac-toe.git" target="_blank">GitHub Repo</a></span>
                </div>
            </footer>
        {% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app_round') }}
{% endblock %}
