{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- Header -->
        {% block header %}
            <header class="row fixed-top">
                <div class="d-flex bg-dark p-1 text-white align-items-center">
                    <div class="col-4 d-flex flex-fill justify-content-start">
                        <span class="pagetitle mx-5"></span>
                    </div>
                    <div class="col-4 d-flex flex-fill justify-content-center">
                        <span class="pagetitle">Tic Tac Toe Challange</span>
                    </div>
                    <div class="col-4 d-flex flex-fill justify-content-end">
                        <span class="mx-5"></span>
                    </div>
                </div>
            </header>
        {% endblock %}

        <!-- Main Content -->
        {% block content %}
            <main class="row d-flex bg-secondary text-white vh-100">
                <div class="col-xl-12 d-flex justify-content-center align-items-center bg-success" id="home-panel-top">
                    {% block content_form %}
                        {{ render(controller('App\\Controller\\HomeController::createPlayer')) }}
                    {% endblock %}
                </div>
                <div class="col-xl-12 d-flex justify-content-center align-items-start bg-success pt-3 px-5" id="home-panel-bottom">
                    <table class="table table-striped table-success table-bordered table-hover align-middle">
                        <thead>
                          <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Won</th>
                            <th scope="col">Lost</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            {% for player in players %}
                                <tr>
                                    <th scope="row">{{ player.id }}</th>
                                    <th>{{ player.name }}</th>
                                    <td>{{ player.won }}</td>
                                    <td>{{ player.lost }}</td>
                                    <td>
                                        <a href="{{ path('app_home_play',{ id: player.id }) }}" class="btn btn-sm btn-success">Play</a>
                                        <a href="{{ path('app_home_delete',{ id: player.id }) }}" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                  </table>
                </div>
            </main>
        {% endblock %}

        <!-- Footer -->
        {% block footer %}
            <footer class="row bg-dark text-white pt-2 pb-2 fixed-bottom">
                <div class="col-xl-12 d-flex justify-content-center align-items-center">
                    <span class="pagetitled">Â© 2023 axr00 - <a href="https://github.com/axr00/tic-tac-toe.git" target="_blank">GitHub Repo</a></span>
                </div>
            </footer>
        {% endblock %}

    </div>
{% endblock %}
